.photo-container {
	padding: 50px	
	font-family: "consolas"

	h1 {
		margin-top: 50px
		margin-bottom: 50px
	}
}

.photo-row {
	margin: 0px
	padding-left: 20px
	padding-right: 20px

	.photo {
		border-top: 0.5px solid black
		border-left: 0.5px solid black
		border-right: 0.5px solid black
		padding: 20px

		.post-img {
			position: relative;
			overflow: hidden;
			padding-bottom: 20%;
		}

		img {	
			position: absolute;
		  	top: 0;
		  	bottom: 0;
		  	left: 0;
		  	right: 0;
		  	margin: auto;
		}

		img:hover {
			cursor:pointer
		}

		.no-left-padding {
			padding-left: 0px
		}

		.no-right-padding {
			padding-right: 0px
		}

		.top-padding {
			padding-top: 10px
		}

		.post-title {
			font-size: 1.8em
			display: -webkit-box;
		    margin: 0 auto;
		    line-height: 1.4;
		    -webkit-line-clamp: 1;
		    -webkit-box-orient: vertical;
		    overflow: hidden;
		    text-overflow: ellipsis;
		}

		.date-label {
			font-weight: 600
		}
	}
}


.photo-row:last-child {
	.photo {
		border-bottom: 0.5px solid black
	}
}

.desc-row {
	margin: 0px
	padding-left: 20px
	padding-right: 20px

	.photo {
		border: 0.5px solid black
		padding: 20px

		.post-img {
			position: relative;
			overflow: hidden;
			padding-bottom: 20%;
		}

		img {	
			position: absolute;
		  	top: 0;
		  	bottom: 0;
		  	left: 0;
		  	right: 0;
		  	margin: auto;
		}

		.no-right-padding {
			padding-right: 0px
		}

		.no-left-padding {
			padding-left: 0px
		}

		.top-padding {
			padding-top: 10px
		}

		.post-title {
			font-size: 1.8em
			padding-left: 0px
		}

		.date-label {
			font-weight: 600
		}

		.back-button {
			padding-left: 0px
			padding-right: 0px

			.btn {
				width: 100%
			}
		}
	}
}

@media (max-width: 991px) {
	.photo-row {
		.post-img {
			padding-bottom: 20%

			img {
				width: 165px
				margin: 0px
				padding-left: 20px
			}
		}
	}
}